---
import MenuItem from "./MenuItem.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<ul class="flex">
  <MenuItem route="/" active={currentPath == "badges"}> Explore </MenuItem>
  <MenuItem route="/me/library" active={currentPath == "me/library"}>
    My Snippets
  </MenuItem>
  <MenuItem route="/me/favorites" active={currentPath == "me/favorites"}>
    Favorites
  </MenuItem>
</ul>
