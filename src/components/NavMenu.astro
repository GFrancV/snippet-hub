---
import MenuItem from "./MenuItem.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<ul class="flex">
  <MenuItem route="/badges" active={currentPath == "badges"}>
    Explorer
  </MenuItem>
  <MenuItem route="/generator" active={currentPath == "generator"}>
    My Snippets
  </MenuItem>
  <MenuItem route="/about" active={currentPath == "about"}>
    Favorites
  </MenuItem>
</ul>
